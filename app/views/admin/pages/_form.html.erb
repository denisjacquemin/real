<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :permalink %><br />
    <%= f.text_field :permalink %>
  </div>
  <div class="field">
    <%= f.label :template %><br />
    <%= f.number_field :template %>
  </div>
  <style>
      #editor {
          position: absolute;
          width: 600px;
          height: 500px;
          margin-left: 300px;
      }
  </style>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :style => 'display:none' %>
    <div id="editor"><%= @page.content %></div>
  </div>
  <script>
      window.onload = function() {
          var editor = ace.edit("editor");
      };
  </script>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
